# .env.example (do NOT commit real secrets; this is an example)
# Copy this file to .env locally or set these values in Render environment variables.

DB_HOST=your_db_host_or_render_internal_host
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# Temporary import token for import_sql.php (change to a long random value)
IMPORT_TOKEN=change_this_to_a_long_random_token

# Application settings
SITE_URL=https://example.com
UPLOAD_PATH=/var/www/html/uploads

